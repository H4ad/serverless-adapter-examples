{
  "name": "apollo-server-firebase",
  "version": "1.0.0",
  "main": "lib/index.js",
  "author": "Vinícius Lourenço",
  "license": "MIT",
  "description": "Example project for Apollo Server and Firebase",
  "scripts": {
    "build": "webpack -c webpack.config.mjs",
    "serve:run": "firebase emulators:start --only functions --inspect-functions",
    "serve": "npm run build && npm run serve:run",
    "shell": "npm run build && firebase functions:shell",
    "start": "nodemon --exec 'node --experimental-specifier-resolution=node --loader ts-node/esm' src/run.ts",
    "start:firebase": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log"
  },
  "type": "module",
  "engines": {
    "node": "16"
  },
  "dependencies": {
    "@apollo/server": "4.2.1",
    "@h4ad/serverless-adapter": "^2.13.0",
    "body-parser": "1.20.1",
    "cors": "2.8.5",
    "firebase-admin": "^10.0.2",
    "firebase-functions": "^3.24.1"
  },
  "devDependencies": {
    "@types/body-parser": "1.19.2",
    "@types/cors": "2.8.12",
    "@typescript-eslint/eslint-plugin": "^5.12.0",
    "@typescript-eslint/parser": "^5.12.0",
    "esbuild-loader": "^2.20.0",
    "firebase-functions-test": "^0.2.0",
    "nodemon": "2.0.20",
    "ts-node": "^10.9.1",
    "typescript": "^4.7.4",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.0",
    "webpack-node-externals": "^3.0.0"
  },
  "private": true
}
